<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.m2i.layoutavance.MainActivity"
    android:orientation="vertical"
    android:id="@+id/fragmentContainer"
   >
    <Button
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter Fragment"
        android:onClick="addFragment"/>

    <Button
        android:id="@+id/button10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maj Fragment"
        android:onClick="updateFragment"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <fragment
        android:id="@+id/fragment2"
        android:name="com.m2i.layoutavance.TestFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
